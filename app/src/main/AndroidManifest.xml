<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.droidlover.xdroid.qubaobao">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="cn.droidlover.xdroid.qubaobao.App"
        android:allowBackup="true"
        android:icon="@mipmap/xdroid_logo_128"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="cn.droidlover.xdroid.qubaobao.ui.MainActivity"
            android:icon="@mipmap/xdroid_logo_128">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cn.droidlover.xdroid.qubaobao.ui.AboutActivity" />
        <activity android:name="cn.droidlover.xdroid.qubaobao.ui.WebActivity" />

    </application>

</manifest>
